[
    {
        "clean": [
            "~",
            "~/bin"
        ]
    },
    {
        "link": {
            "~/.tmux.conf": {
                "relink": true
            },
            "~/bin/tmux-superscript": {
                "create": true,
                "relink": true,
                "path": "bin/tmux-superscript"
            },
            "~/bin/tmux-weather": {
                "create": true,
                "relink": true,
                "path": "bin/tmux-weather"
            },
            "~/bin/tmux-battery": {
                "create": true,
                "relink": true,
                "path": "bin/tmux-battery"
            }
        }
    },
    {
        "shell": [
            {
                "command": "git -C ~/.tmux/plugins/tpm pull || git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm",
                "description": "install TPM (tmux plugin manager) from git"
            },
            {
                "command": "~/.tmux/plugins/tpm/bin/install_plugins",
                "description": "install tmux plugins"
            }
        ]
    }
]
