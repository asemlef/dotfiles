[
    {
        "clean": [
            "~",
            "~/.config/nvim"
        ]
    },
    {
        "link": {
            "~/.config/nvim/init.vim": {
                "create": true,
                "relink": true
            }
        }
    },
    {
        "shell": [
            {
                "command": "rm -f ~/.local/share/nvim/site/autoload/plug.vim; curl -fLo ~/.local/share/nvim/site/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim",
                "description": "install vim-plug from git"
            },
            {
                "command": "command nvim -c 'PlugInstall|qa'",
                "description": "install plugins for vim"
            }
        ]
    }
]
