[
    {
        "clean": ["~"]
    },
    {
        "link": {
            "~/.vimrc": {"relink": true}
        }
    },
    {
        "shell": [
            {
                "command": "rm -f ~/.vim/autoload/plug.vim; curl -fLo ~/.vim/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim",
                "description": "install vim-plug from git"
            },
            {
                "command": "command vim -c 'PlugInstall|qa' < /dev/tty",
                "description": "install plugins for vim"
            }
        ]
    }
]
